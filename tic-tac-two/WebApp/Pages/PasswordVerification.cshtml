@page
@using GameBrain
@model WebApp.Pages.PasswordVerification

<h1>Enter a password to join the game</h1>


<div class="row">
    <div class="col-md-4">

        <div class="d-inline-block border rounded px-3 py-2 bg-light">
            <h6 class="m-0 text-danger">@Model.Message</h6>
        </div>

        <input type="hidden" name="GameName" value="@Model.GameName"/>
        <form method="post">
            @if (Model.TicTacTwoBrain.GameState.PlayersSetting == EGamePlayers.PvP)
            {
                <div>
                    <label for="PwX">Player X Password</label>
                    <input class="form-control" type="text" name="PasswordX" id="PwX"
                           placeholder="Enter password for Player X" value="@Model.PasswordX"/>
                </div>
                <div class="mt-2">
                    <label for="PwO">Player O Password</label>
                    <input class="form-control" type="text" name="PasswordO" id="PwO"
                           placeholder="Enter password for Player O" value="@Model.PasswordO"/>
                </div>
            }
            else if (Model.TicTacTwoBrain.GameState.PlayersSetting == EGamePlayers.PvA)
            {
                @if (Model.TicTacTwoBrain.GameState.PlayerX == EGamePlayers.Player)
                {
                    <div>
                        <label for="Pw">PlayerX Password</label>
                        <input class="form-control" type="text" name="PasswordX" id="PwX"
                               placeholder="Enter password for Player" value="@Model.PasswordX"/>
                    </div>
                }
                else
                {
                    <div>
                        <label for="Pw">PlayerO Password</label>
                        <input class="form-control" type="text" name="PasswordO" id="PwO"
                               placeholder="Enter password for Player" value="@Model.PasswordO"/>
                    </div>
                }
            }
            <div class="form-group mt-3">
                <input type="submit" value="Play" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>